<div class='container'>
  <div class='player_data pull-left'>
    <%= render :partial => 'player_data', :locals => { :player => current_user, :player_data => @game.players_data[current_user.token] } %>
  </div>
  <div class='canvas_block pull-left'>
    <div class='canvas' id="board" game-id=<%= @game.id %> ></div>
    <div class='canvas' id="screen"></div>
  </div>
  <div class='opponent_data pull-left'>
    <%= render :partial => 'player_data', :locals => { :player => @game.opponent(current_user), :player_data => @game.players_data[@game.opponent(current_user).token] } %>
  </div>
</div>

<script type="text/javascript">
  window.current_gems_position = <%= @game.board.current_gems_position.to_json.html_safe %>
  window.active_player = <%= current_user.token == @game.active_player_token %>
  window.env = "<%= Rails.env %>"
</script>
