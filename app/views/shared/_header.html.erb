<nav class="navbar navbar-default" role="navigation">
  <div class='container'>
    <div class='navbar-text navbar-right'>
      <% if user_signed_in? %>
        <div class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
            <% if current_user.avatar.present? %>
              <%= image_tag current_user.avatar.mini %>
            <% end %>
            <%= current_user.nickname %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li>
              <%= link_to "Profile".html_safe, edit_user_path(current_user) %>
            </li>
            <li>
              <%= link_to t('views.client.logout'), destroy_user_session_path, :method => :delete %>
            </li>
          </ul>
        </div>
      <% else %>
        <%= link_to t('views.client.sign_in').upcase, new_user_session_path %>
        <%= link_to t('views.client.sign_up').upcase, new_user_registration_path %>
      <% end %>
    </div>
  </div>
</nav>

